<%- include('./header.ejs') %>

  <!--begin::App Main-->
      <main class="app-main">
        <!--begin::App Content Header-->
        <div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">View Admin</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">View Admin</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <!--begin::App Content-->
        <div class="app-content">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <!-- /.col -->
              <div class="col-md-12">
                <div class="card mb-4">
                  <div class="card-header">
                    <h3 class="card-title">View Admin Data</h3>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body p-0">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th style="width: 10px">#</th>
                          <th>Profile Picture</th>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Password</th>
                          <th>Gender</th>
                          <th>Hobby</th>
                          <th>Description</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% var i = 1;  for(var record of adminRecord) { %>
                          <tr>
                            <td><%= i %></td>
                            <td>
                              <img src="<%= record.avtar %>" width="40"/>
                            </td>
                            <td><%= record.name %></td>
                            <td><%= record.email %></td>
                            <td><%= record.password %></td>
                            <td><%= record.gender %></td>
                            <td><%= record.hobby %></td>
                            <td><%= record.desc %></td>
                            <td>
                              <a class="text-danger" href="/deleteAdmin/<%= record._id %>" onclick="confirm('Are you Sure to delete this Record ?')" ><i class="bi bi-trash3-fill"></i></a>
                            </td>
                          </tr>
                        <% i++; } %>
                      </tbody>
                    </table>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.col -->
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content-->
      </main>
      <!--end::App Main-->

  <%- include('./footer.ejs') %>